<div class="border backgroundWhite">
    <div class="row mb-3">
        <div class="col-6">
            <h2 class="text-primary">Orders list</h2>
        </div>
        <div class="col-6 text-right">
            <ul class="list-group list-group-horizontal-sm">
                <a asp-action="Index" asp-route-status="pending" class="text-decoration-none">
                    <li class='list-group-item @(Context.Request.Query["status"]=="pending" || Context.Request.Query["status"].ToString()==""?"active text-white":"")'>Pending</li>
                </a>
                <a asp-action="Index" asp-route-status="approved" class='text-decoration-none'>
                    <li class='list-group-item @(Context.Request.Query["status"]=="approved"?"active text-white":"")'>Approved</li>
                </a>
                <a asp-action="Index" asp-route-status="all" class="text-decoration-none">
                    <li class='list-group-item @(Context.Request.Query["status"]=="all"?"active text-white":"")'>All</li>
                </a>
            </ul>

        </div>
    </div>
    <table id="tblData" class="table table-striped table-bordered w-100">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Items</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>
@section Scripts{
    <script src="~/js/admin/order.js"></script>
}