@model Core3Shop.ViewModels.ServiceDetailsViewModel

<div class="container backgroundWhite">
    <div class="card">
        <div class="card-header bg-light text-light row container m-0">
            <div class="col-12 col-md-6">
                <h1 class="text-primary">@Model.Service.Name</h1>
            </div>
            <div class="col-12 col-md-6 text-md-right">
                <h1 class="text-muted">Total: $@Model.TotalPrice</h1>
            </div>
        </div>
        <div class="card-body">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-12 col-lg-8">
                        <h3 class="text-success">Price per service: $@Model.Service.Price</h3>
                        <h4 class="text-muted">@Model.Service.Frequency.Name</h4>
                        <p class="text-secondary">@Html.Raw(Model.Service.Description)</p>
                    </div>
                    <div class="col-12 col-lg-4">
                        <img class="w-100" src="@Model.Service.ImageUrl" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 p-1">
                    <a asp-action="Index" class="btn btn-success form-control btn-lg" asp-fragment="@Model.Service.CategoryId"><i class="fas fa-arrow-left"></i> Back to list</a>
                </div>
                <div class="col-12 col-md-6 p-1">
                    @if (Model.IsInCart)
                    {
                        <div class="btn btn-primary form-control btn-lg disabled"><i class="fas fa-shopping-cart"></i> Already in cart</div>
                    }
                    else
                    {
                        <a asp-action="AddToCart" class="btn btn-primary form-control btn-lg" asp-route-serviceId="@Model.Service.Id"><i class="fas fa-shopping-cart"></i> Add to cart</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
