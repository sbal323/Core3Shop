@model int

<div class="container">
    <div class="card">
        <div class="card-header">
            <h1 class="text-primary text-center">Order request submitted successfully!</h1>
        </div>
        <div class="card-body text-center">
            <div class="row">
                <div class="col-2 display-1 text-success">
                    <i class="far fa-smile"></i>
                </div>
                <div class="col-10 h4">
                    <div class="p-2">Thank you for submitting the request online!</div>
                    <div class="p-2">We have received your request and our team will be contact you shortly.</div>
                    <div class="p-2">Your request number is @Model</div>
                </div>
            </div>
            
        </div>
    </div>
    
    
</div>